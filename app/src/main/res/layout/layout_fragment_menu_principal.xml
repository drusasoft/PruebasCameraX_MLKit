<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFragmentMenuPrincipal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewApartadoCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/titApartadoCameraX"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separadorApartadoCamera"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textViewApartadoCamera"/>

    <TextView
        android:id="@+id/txtPruebaCameraX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:fontFamily="@font/aclonica"
        android:text="@string/txtOpcionCameraX"
        android:textSize="16sp"
        android:textColor="@color/color_texto_pulsacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separadorApartadoCamera" />



    <TextView
        android:id="@+id/textViewApartadoMLKit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/titApartadoMLKit"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/txtPruebaCameraX" />

    <View
        android:id="@+id/separadorApartadoMLKit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textViewApartadoMLKit"/>

    <TextView
        android:id="@+id/txtPruebaLectorQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:fontFamily="@font/aclonica"
        android:text="@string/txtOpcionLectorQR"
        android:textSize="16sp"
        android:textColor="@color/color_texto_pulsacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separadorApartadoMLKit"/>

    <TextView
        android:id="@+id/txtPruebaEtiquetadoImagenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:fontFamily="@font/aclonica"
        android:text="@string/txtOpcionEtiquetadoImagenes"
        android:textSize="16sp"
        android:textColor="@color/color_texto_pulsacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPruebaLectorQR"/>

</androidx.constraintlayout.widget.ConstraintLayout>